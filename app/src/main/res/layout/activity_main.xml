<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/root" xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/admob"/>


    <FrameLayout android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/all">


    <FrameLayout android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/game" android:background="#FFF">

    <FrameLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/frame" android:background="@drawable/frame" android:layout_gravity="center"/>

    <TextView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/mess" android:background="#80000000" android:layout_gravity="center" android:visibility="gone" android:textStyle="bold" android:textSize="30sp" android:textColor="#FFF" android:lines="1" android:gravity="center"/>

</FrameLayout>


    <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/main" android:background="#FFF" android:padding="10dp">


    <LinearLayout android:orientation="horizontal" android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="1">

    <ImageView android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1" android:src="@drawable/player1" android:contentDescription="@null"/>

    <TextView android:layout_height="match_parent" android:layout_width="0dp" android:id="@+id/txt_score" android:layout_gravity="center" android:textStyle="bold" android:textSize="40sp" android:textColor="#000000" android:gravity="center" android:layout_weight="1"/>

    <ImageView android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1" android:src="@drawable/player2" android:contentDescription="@null"/>

</LinearLayout>


    <LinearLayout android:orientation="horizontal" android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="1" android:layout_marginTop="10dp">

    <Button android:layout_height="match_parent" android:layout_width="0dp" android:id="@+id/btn_clear" android:layout_weight="1" android:text="@string/btn_clear" android:onClick="onClick" android:layout_marginRight="5dp" style="@style/Button"/>

    <Button android:layout_height="match_parent" android:layout_width="0dp" android:id="@+id/btn_sound" android:layout_weight="1" android:text="@string/btn_mute" android:onClick="onClick" style="@style/Button" android:layout_marginLeft="5dp"/>

</LinearLayout>

    <Button android:layout_height="0dp" android:layout_width="match_parent" android:id="@+id/btn_start1" android:background="@drawable/button_start" android:layout_weight="1" android:layout_marginTop="10dp" android:text="@string/btn_start1" android:onClick="onClick"/>

    <Button android:layout_height="0dp" android:layout_width="match_parent" android:id="@+id/btn_start2" android:background="@drawable/button_start" android:layout_weight="1" android:layout_marginTop="10dp" android:text="@string/btn_start2" android:onClick="onClick"/>

    <Button android:layout_height="0dp" android:layout_width="match_parent" android:id="@+id/btn_exit" android:layout_weight="1" android:layout_marginTop="10dp" android:text="@string/btn_exit" android:onClick="onClick" style="@style/Button"/>

</LinearLayout>

</FrameLayout>

</LinearLayout>